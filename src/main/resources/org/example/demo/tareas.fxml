<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo.TareasController"
      spacing="10" >
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Gestor de Tareas" style="-fx-font-weight: bold;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <TableView fx:id="tablaTareas">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="150"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
            <TableColumn fx:id="colPrioridad" text="Prioridad" prefWidth="80"/>
            <TableColumn fx:id="colFecha" text="Fecha Límite" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Prioridad:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbxPrioridad" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Fecha Límite:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dtpFechaLimite" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Agregar" onAction="#agregarTarea" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Editar" onAction="#editarTarea" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Eliminar" onAction="#eliminarTarea" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Limpiar" onAction="#limpiarCampos"/>
    </HBox>
</VBox>
